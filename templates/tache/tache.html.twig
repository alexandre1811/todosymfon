{% extends 'base.html.twig' %}

{% block title %}{{ tache.nom }}{% endblock %}

{% block body %}
    <table class="table table-hover">
        <tr>
            <th>Nom</th>
            <th>Deadline</th>
            <th>Etat</th>
            <th>Utilisateur</th>
        </tr>
        <tbody>
        {% for utilisateur in utilisateurs %}
        <tr>
            <td>{{ tache.nom }}</td>
            <td>{{ tache.deadline|date("d/m/Y h:m:s") }}</td>
            <td>{{ tache.etat }}</td>
            <td>{{ utilisateur.nom }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <h2>Modifier la tache</h2>
    {{ form(form_edit) }}

{% endblock %}